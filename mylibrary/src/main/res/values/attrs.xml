<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="default_color">@color/placeholder</color>

    <declare-styleable name="MyImageView">
        <attr name="miv_use_gradient" format="boolean" />
        <attr name="miv_cornerRadius" format="integer" />
        <attr name="miv_backgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="MyTextView">
        <attr name="mtv_width_weight" format="float" />
        <attr name="mtv_height_weight" format="float" />
        <attr name="mtv_use_gradient" format="boolean" />
        <attr name="mtv_cornerRadius" format="integer" />
        <attr name="mtv_backgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="PullToRefresh">
        <attr name="AniBackColor" format="color" />
        <attr name="AniForeColor" format="color" />
        <attr name="CircleSmaller" format="integer" />
    </declare-styleable>

    <declare-styleable name="MyBadgeImageView">
        <attr name="badgeDrawable" format="reference" />
        <attr name="badgeDrawableTint" format="color" />
        <attr name="badgeNumber" format="integer" />
        <attr name="badgeStrokeWidth" format="dimension" />
        <attr name="badgeStrokeColor" format="color" />
        <attr name="badgeSize" format="dimension" />
        <attr name="badgeColor" format="color" />
        <attr name="badgeTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="MyImageSlider">
        <attr name="sliderAutoScroll" format="boolean" />
        <attr name="sliderScrollDuration" format="integer" />
        <attr name="sliderEnableIndicator" format="boolean" />
        <attr name="sliderIndicator" format="reference" />
        <attr name="sliderIndicatorSize" format="dimension" />
        <attr name="sliderMargin" format="dimension" />
        <attr name="sliderOffset" format="dimension" />
        <attr name="sliderIndicatorActiveColor" format="color" />
        <attr name="sliderIndicatorDisableColor" format="color" />
        <attr name="sliderIndicatorType" format="enum">
            <enum name="dot" value="0" />
            <enum name="spring" value="1" />
            <enum name="worm" value="2" />
        </attr>

    </declare-styleable>
    <attr name="dampingRatio" format="float" />
    <attr name="dotsClickable" format="boolean" />
    <attr name="dotsColor" format="color" />
    <attr name="dotsCornerRadius" format="dimension" />
    <attr name="dotsSize" format="dimension" />
    <attr name="dotsSpacing" format="dimension" />
    <attr name="dotsStrokeColor" format="color" />
    <attr name="dotsStrokeWidth" format="dimension" />
    <attr name="dotsWidthFactor" format="float" />
    <attr name="progressMode" format="boolean" />
    <attr name="selectedDotColor" format="color" />
    <attr name="stiffness" format="float" />
    <declare-styleable name="DotsIndicator">
        <attr name="dotsColor" />
        <attr name="selectedDotColor" />
        <attr name="dotsSize" />
        <attr name="dotsWidthFactor" />
        <attr name="dotsSpacing" />
        <attr name="dotsCornerRadius" />
        <attr name="progressMode" />
        <attr name="dotsClickable" />
        <attr name="dotsElevation" format="dimension" />
    </declare-styleable>
    <declare-styleable name="SpringsIndicator">
        <attr name="dotsColor" />
        <attr name="dotsSize" />
        <attr name="dotsSpacing" />
        <attr name="dotsCornerRadius" />
        <attr name="dotsStrokeWidth" />
        <attr name="dotsStrokeColor" />
        <attr name="stiffness" />
        <attr name="dampingRatio" />
        <attr name="dotsClickable" />
    </declare-styleable>
    <declare-styleable name="WormsIndicator">
        <attr name="dotsColor" />
        <attr name="dotsSize" />
        <attr name="dotsSpacing" />
        <attr name="dotsCornerRadius" />
        <attr name="dotsStrokeWidth" />
        <attr name="dotsStrokeColor" />
        <attr name="dotsClickable" />
    </declare-styleable>

    <declare-styleable name="MyStepper">
        <attr name="stepDrawablePlus" format="reference" />
        <attr name="stepDrawableMinus" format="reference" />
        <attr name="stepDrawableSize" format="reference" />
        <attr name="stepDrawableColor" format="color" />
        <attr name="stepValue" format="integer" />
        <attr name="stepMaxValue" format="integer" />
        <attr name="stepMinValue" format="integer" />
        <attr name="stepValueColor" format="color" />
        <attr name="stepValueSize" format="dimension" />
        <attr name="stepValueIncrement" format="integer" />
    </declare-styleable>
</resources>